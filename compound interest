#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
 
    double P, R, t ,CI,A;

    
    scanf("%lf", &P);
    scanf("%lf", &R);
    scanf("%lf", &t);


    if (P <= 0 || R <= 0 || t <= 0) {
        printf("Invalid input. \n");
        return 0;
    }
    A = P * pow((1 + R/100),t);


    CI = A -P;


    printf("%.2lf\n", CI);

    return 0;
}
