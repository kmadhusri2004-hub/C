#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    
    double length,width,perimeter,area;
    scanf("%lf",&length);
    scanf("%lf",&width);
    area=length*width;
    perimeter =2*(length+width);
    area=length*width;
    printf("Area : %.2f\n", area);
    printf("Perimeter : %.2f\n", perimeter);

return 0;
}
