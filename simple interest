#include <stdio.h>

int main() {
    double P, R, N, SI;

    
    scanf("%lf", &P);
    scanf("%lf", &R);
    scanf("%lf", &N);

    
    if (P <= 0 || R <= 0 || N <= 0) {
        printf("Invalid input. All values must be greater than 0.\n");
        return 1;
    }

    
    SI = (P * R * N) / 100.0;

    
    printf("%.2lf\n", SI);

    return 0;
}
